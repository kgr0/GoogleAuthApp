@using Microsoft.AspNet.Identity;
@model IOrderedQueryable<GoogleAuthApp.Models.MessageModel>


@section scripts {

    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="/Scripts/jquery-3.4.1.min.js"></script>

    @*<script src="/Scripts/ui/jquery.ui.core.js"></script>
        <script src="/Scripts/ui/jquery.ui.widget.js"></script>
        <script src="/Scripts/ui/jquery.ui.mouse.js"></script>
        <script src="/Scripts/ui/jquery.ui.draggable.js"></script>
        <script src="/Scripts/ui/jquery.ui.resizable.js"></script>*@


    <!--Reference the SignalR library. -->
    <script src="/Scripts/jquery.signalR-2.4.2.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>

    <script type="text/javascript">
        $(function () {


            // Declare a proxy to reference the hub.
            var chatHub = $.connection.chatHub;

            registerClientMethods(chatHub);

            // Start Hub
            $.connection.hub.start().done(function () {

                setScreen(chatHub);
                registerEvents(chatHub)

            });

        });

        //function setScreen(isLogin) {
        function setScreen(chatHub) {
         //!"@User.Identity.IsAuthenticated"
            //!isLogin
            var name = "@User.Identity.GetUserName()";
            if (name.length <= 0) {
                $("#divChat").hide();
                $("#h2Message").show();

            }
            else {

                var id = "@User.Identity.GetUserId()";
                chatHub.server.connect(name, id);
                $("#h2Message").hide();
                $("#divChat").show();

            }

        }

        function registerEvents(chatHub) {
            $('#btnSendMsg').click(function () {

                var msg = $("#txtMessage").val();
                if (msg.length > 0) {

                    var userName = "@User.Identity.GetUserName()";
                    var userId = "@User.Identity.GetUserId()";
                    var toUserId = $('#hdId').val();
                    chatHub.server.getUserConnectionId(toUserId).done(function (toConnectionId) {
                        chatHub.server.sendPrivateMessage(toUserId, toConnectionId, msg, userId);
                    });

                    $("#txtMessage").val('');
                }
            });

            $("#txtMessage").keypress(function (e) {
                if (e.which == 13) {
                    $('#btnSendMsg').click();
                }
            });

        }

        function registerClientMethods(chatHub) {

            // Calls when user successfully logged in
            chatHub.client.onConnected = function (id, allUsers) {

                var chatWithUserId =  "@ViewBag.userId";
                var chatWithUserName ="@ViewBag.userName";
                var chatWithConnectionId = "";

                // Add All Users
                for (i = 0; i < allUsers.length; i++) {
                    if (allUsers[i].Read == true)
                        AddUser(chatHub, allUsers[i].Id, allUsers[i].UserName);
                    else {
                        AddUserOnTop(chatHub, allUsers[i].Id, allUsers[i].UserName);
                        var element = document.getElementById(allUsers[i].Id);
                        element.style.backgroundColor = "coral";
                    }
                    if (allUsers[i].Id == chatWithUserId) {
                        chatWithConnectionId = allUsers[i].ConnectionId;
                    }
                }

                if (chatWithConnectionId == "" ) {
                    chatWithUserId = allUsers[0].Id;
                    chatWithUserName = allUsers[0].UserName;
                    chatWithConnectionId = allUsers[0].ConnectionId;
                }

                SetUserInformation(chatWithUserId, chatWithUserName, chatWithConnectionId);

                chatHub.server.getChatHistory(id, chatWithUserId);

            }

            // On New User Connected
            chatHub.client.onNewUserConnected = function (id, name, connectionId) {
                AddUser(chatHub, id, name);
            }


            // On User Disconnected
            chatHub.client.onUserDisconnected = function (id, userName) {

                $('#' + id).remove();

                var ctrId = 'private_' + id;
                $('#' + ctrId).remove();


                var disc = $('<div class="disconnect">"' + userName + '" logged off.</div>');

                $(disc).hide();
                $('#divusers').prepend(disc);
                $(disc).fadeIn(200).delay(2000).fadeOut(200);

            }

            chatHub.client.messageReceived = function (userName, message, toUserId) {
                if ($('#hdId').val() == toUserId) {

                    AddMessage(userName, message);
                    chatHub.server.readMessages("@User.Identity.GetUserId()", toUserId);
                }
                else {
                    AddUserOnTop(chatHub, toUserId, userName);
                    var element = document.getElementById(toUserId);
                    element.style.backgroundColor = "coral";
                }
            }
            chatHub.client.onSetUserInformation = function (user) {
                SetUserInformation(user.Id, user.UserName, user.ConnectionId);
            }
            chatHub.client.onAlert = function (info) {
                alert(info);
            }

        }

        function AddUser(chatHub, id, name) {

            var userId = "@User.Identity.GetUserId()";


            var code = "";
            if (userId == id) {

                code = $('<div class="loginUser">' + name + "</div>");

            }
            else {

                code = $('<a id="' + id + '" class="user" >' + name + '<a>');

                $(code).dblclick(function () {

                    var id = $(this).attr('id');
                    var element = document.getElementById(id);
                    element.style.backgroundColor = "white";
                    if (userId != id) {

                        chatHub.server.getUserInformation(id);
                        chatHub.server.getChatHistory(userId,id);
                    }


                });
            }

           $("#divusers").append(code);

        }
        function AddUserOnTop(chatHub, id, name) {

            $('#' + id).remove();

            var userId = "@User.Identity.GetUserId()";


            var code = "";
            if (userId == id) {

                code = $('<div class="loginUser">' + name + "</div>");

            }
            else {

                code = $('<a id="' + id + '" class="user" >' + name + '<a>');

                $(code).dblclick(function () {

                    var id = $(this).attr('id');
                    var element = document.getElementById(id);
                    element.style.backgroundColor = "white";
                    if (userId != id) {

                        chatHub.server.getUserInformation(id);
                        chatHub.server.getChatHistory(userId,id);
                    }


                });
            }

            $("#divusers").prepend(code);

        }

        function AddMessage(userName, message) {
            $('#divChatWindow').append('<div class="message"><span class="userName">' + userName + '</span>: ' + message + '</div>');

            var height = $('#divChatWindow')[0].scrollHeight;
            $('#divChatWindow').scrollTop(height);
        }
        function SetUserInformation(userId, userName, userConnection) {
            $('#hdId').val(userId);
            $('#hdUserName').val(userName);
            $('#hdContextId').val(userConnection);
            $('#spanUser').html(userName);
            $('#divChatWindow').html("");
        }




    </script>

}

<head>
    <title></title>
    <link type="text/css" rel="stylesheet" href="~/Content/ChatStyle.css" />

</head>
<body>
    <div id="header">

    </div>
    <br />
    <br />
    <br />

    <div id="divContainer">
        <h2 id="h2Message">You have to be logged in!</h2>
        <div id="divChat" class="chatRoom">
            <div class="title">
                Welcome to Chat Room [<span id='spanUser'></span>]

            </div>
            <div class="content">
                <div id="divChatWindow" class="chatWindow">
                </div>
                <div id="divusers" class="users">
                </div>
            </div>
            <div class="messageBar">
                <input class="textbox" type="text" id="txtMessage" />
                <input id="btnSendMsg" type="button" value="Send" class="submitButton" />
            </div>
        </div>

        <input id="hdId" type="hidden" />
        <input id="hdUserName" type="hidden" />
        <input id="hdContextId" type="hidden" />
    </div>

</body>