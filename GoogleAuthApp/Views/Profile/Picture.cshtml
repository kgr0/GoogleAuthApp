
@{
    ViewBag.Title = "Picture";
    Layout = "~/Views/Profile/ShowOwnProfile.cshtml";
}

<h2>Picture</h2>

@model IEnumerable<GoogleAuthApp.Models.PictureViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Мои изображения</h2>

<p>
    @Html.ActionLink("Add picture", "Create")
</p>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                    + Convert.ToBase64String(item.Image) + "\" />")
            </td>
        </tr>
    }

</table>